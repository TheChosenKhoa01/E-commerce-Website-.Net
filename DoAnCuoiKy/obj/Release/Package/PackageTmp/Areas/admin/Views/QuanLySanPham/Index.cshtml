@using DoAnCuoiKy.Models
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}


<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-center" >Quản Lý Sản Phẩm</h1>
   
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">          
            @Html.ActionLink("Thêm Sản Phẩm","Create","QuanLySanPham",new { @class="btn btn-primary float-right"})
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Sản Phẩm</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Hình Ảnh</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                            
                        </tr>
                    </thead>
                
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaSP</td>

                                <td>@item.TenSP</td>
                                <td>
                                    <img class="img-responsive" style="width:100px;height:100px;" src="@Url.Content("~/Content/HinhAnhSP/"+item.HinhAnh)" />
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa","Edit","QuanLySanPham",new { @id = item.MaSP},new { @class = "btn btn-warning"})
                                </td>
                                <td>
                                    @Html.ActionLink("Xóa", "Delete", "QuanLySanPham", new { @id = item.MaSP }, new { @class = "btn btn-danger" })
                                </td>
                              
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->