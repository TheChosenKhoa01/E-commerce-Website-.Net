@using DoAnCuoiKy.Models
@model  IEnumerable<NhaSanXuat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-center">Quản Lý Nhà Sản Xuất </h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            @Html.ActionLink("Thêm Nhà Sản Xuất", "Create", "NhaSanXuat", new { @class = "btn btn-primary float-right" })
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Nhà Sản Xuất</th>
                            <th>Tên Nhà Sản Xuất</th>
                            <th>Thông Tin</th>
                            <th>Logo</th>
                            <th>Sửa</th>
                            <th>Xóa</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaNSX</td>

                                <td>@item.TenNSX</td>
                                <td>@item.ThongTin</td>
                                <td>@item.Logo</td>

                                <td>
                                    @Html.ActionLink("Sửa", "Eidt", "NhaSanXuat", new { id = item.MaNSX }, new { @class = "btn btn-warning" })
                                </td>
                                <td>
                                    @Html.ActionLink("Xóa", "Delete", "NhaSanXuat", new { id = item.MaNSX }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
