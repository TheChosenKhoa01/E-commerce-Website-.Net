@model DoAnCuoiKy.Models.ThanhVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    @if (ViewBag.Message != null || ViewBag.Message != "")
    {
        <div class="alert-info text-info ">@ViewBag.Message</div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="text-center">Sửa Thành Viên</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaThanhVien)

            <div class="form-group">
                <label class="control-label col-md-2">Loại Thành Viên</label>
                <div class="col-md-10">
                    @Html.DropDownList("MaLoaiTV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLoaiTV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>