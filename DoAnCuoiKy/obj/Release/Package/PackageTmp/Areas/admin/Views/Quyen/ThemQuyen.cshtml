@model DoAnCuoiKy.Models.Quyen

@{
    ViewBag.Title = "ThemQuyen";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h2 class="text-center">Thêm Quyền</h2>

    @using (Html.BeginForm("ThemQuyen", "Quyen", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4></h4>
            <hr />
            @Html.ValidationSummary(true)

            <span style="color:red;">@Html.Raw(ViewBag.upload as string) <br /> @Html.Raw(ViewBag.upload1 as string) </span>

            <div class="form-group">
                <label>Mã Quyền</label>

                @Html.EditorFor(model => model.MaQuyen, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaQuyen)

            </div>

            <div class="form-group">
                <label>Tên Quyền</label>

                @Html.EditorFor(model => model.TenQuyen, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenQuyen)

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" id="submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>

