@using DoAnCuoiKy.Models
@model IEnumerable<LoaiThanhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";

}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-center">Danh Sách Loại Thành Viên</h1>
    @if (Session["deleteLoaiThanhVien"] != null)
    {
        <br />
        <div class="text-info">@Session["deleteLoaiThanhVien"]</div>
        <br />
    }
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            @Html.ActionLink("Thêm Loại Thành Viên", "Create", "QuanLyLoaiThanhVien", new { @class = "btn btn-primary float-right" })
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Loại Thành Viên</th>
                            <th>Loại Thành Viên</th>
                            <th>Ưu Đãi</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaLoaiTV</td>

                                <td>@item.TenLoai</td>
                                <td>@item.UuDai</td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", "QuanLyLoaiThanhVien", new { @id = item.MaLoaiTV }, new { @class = "nav-link" })
                                </td>

                                <td>
                                    @Html.ActionLink("Xóa", "Delete", "QuanLyLoaiThanhVien", new { @id = item.MaLoaiTV }, new { @class = "nav-link" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->