@model DoAnCuoiKy.Models.Reply

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    <h2>Sửa</h2>
    <br />
    @if (ViewBag.Message != null)
    {
        <div class="text-info"><h4>@ViewBag.Message</h4></div>
    }
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaBL)

            @Html.HiddenFor(model => model.MaThanhVien)

            <div class="form-group">
                @Html.LabelFor(model => model.hienthi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.hienthi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.hienthi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>